
	{%- if eleventy.env.runMode === "serve" %}
		<!-- External CSS for local dev (refresh without page reload) -->
		<link rel="stylesheet" href="{% getBundleFileUrl "css", "global" %}">
		<link rel="stylesheet" href="{% getBundleFileUrl "css", "local" %}">
	{%- else  %}
		<!-- Inlined CSS (fastest site performance in production)  -->
		<style>{% getBundle "css", "global" %}</style>
		<style>{% getBundle "css", "local" %}</style>
	{%- endif %}

	{% css "global" %}{% include "css/global.css" %}{% endcss %}

<style>
/* Importă fontul Atkinson Hyperlegible */
@import url('https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:wght@400&display=swap');

* {
  box-sizing: border-box; /* Asigură că padding-ul și bordurile sunt incluse în lățime */
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 600px;
  margin: 2rem auto;
  padding: 0 1rem;
}

.newsletter-form .input-group {
  display: flex;
  gap: 0.75rem;
  width: 100%;
}

.newsletter-form input[type="text"] {
  flex: 4; /* Mărire pe desktop pentru a fi mai lung */
  padding: 14px 40px; /* Ajustare padding pentru a accentua lungimea */
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  font-size: 16px;
  line-height: 1.5;
  outline: none;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  background: #ffffff;
  font-family: 'Atkinson Hyperlegible', sans-serif;
  font-weight: 400;
  color: #333;
  min-width: 0;
  margin: 0;
}

.newsletter-form input[type="text"]:focus {
  border-color: #4f46e5;
  box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
}

.newsletter-form button {
  background: #4467dd;
  color: white;
  font-weight: 400;
  padding: 14px 20px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease, transform 0.2s ease;
  font-family: 'Atkinson Hyperlegible', sans-serif;
  flex: 1;
  max-width: 150px;
  margin: 0;
}

.newsletter-form button:hover {
  background: #3754b5;
  transform: translateY(-1px);
}

.newsletter-form button:active {
  transform: translateY(0);
}

.newsletter-form .form-message {
  margin-top: 0.5rem;
  font-size: 14px;
  color: #64748b;
  text-align: center;
  min-height: 20px;
}

@media (max-width: 600px) {
  .newsletter-form .input-group {
    flex-direction: column;
  }
  
  .newsletter-form input[type="text"] {
    width: 100% !important; /* Forță lățimea */
    padding: 14px 40px; /* Mărire padding pentru a face inputul mai lung */
    border: 1px solid #e2e8f0; /* Elimină bordura roșie, revenire la stil default */
    margin: 0;
  }
  
  .newsletter-form button {
    width: 100% !important; /* Forță lățimea */
    padding: 14px 10px; /* Reducere padding pentru a face butonul mai scurt */
    margin-top: 0.5rem;
    border: none; /* Elimină bordura verde, revenire la stil default */
    display: block;
    min-width: 0 !important; /* Elimină orice min-width implicit */
    margin: 0;
  }
}
</style>