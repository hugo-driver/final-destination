
	{%- if eleventy.env.runMode === "serve" %}
		<!-- External CSS for local dev (refresh without page reload) -->
		<link rel="stylesheet" href="{% getBundleFileUrl "css", "global" %}">
		<link rel="stylesheet" href="{% getBundleFileUrl "css", "local" %}">
	{%- else  %}
		<!-- Inlined CSS (fastest site performance in production)  -->
		<style>{% getBundle "css", "global" %}</style>
		<style>{% getBundle "css", "local" %}</style>
	{%- endif %}

	{% css "global" %}{% include "css/global.css" %}{% endcss %}

<style>
/* Importă fontul Atkinson Hyperlegible */
@import url('https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:wght@400&display=swap');

.newsletter-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 600px;
  margin: 2rem auto;
  padding: 0 1rem;
}

.newsletter-form .input-group {
  display: flex;
  gap: 0.75rem;
  width: 100%;
}

.newsletter-form input[type="text"] {
  flex: 3; /* Input mai lung pe desktop */
  padding: 14px 40px; /* Padding pentru lățime vizibilă */
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  font-size: 16px;
  line-height: 1.5;
  outline: none;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  background: #ffffff;
  font-family: 'Atkinson Hyperlegible', sans-serif;
  font-weight: 400;
  min-width: 0;
}

.newsletter-form input[type="text"]:focus {
  border-color: #4f46e5;
  box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
}

.newsletter-form button {
  background: #4467dd;
  color: white;
  font-weight: 400;
  padding: 14px 20px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease, transform 0.2s ease;
  font-family: 'Atkinson Hyperlegible', sans-serif;
  flex: 1; /* Buton mai scurt pe desktop */
  max-width: 150px; /* Limită maximă pe desktop */
}

.newsletter-form button:hover {
  background: #3754b5;
  transform: translateY(-1px);
}

.newsletter-form button:active {
  transform: translateY(0);
}

.newsletter-form .form-message {
  margin-top: 0.75rem;
  font-size: 14px;
  color: #64748b;
  text-align: center;
  min-height: 20px;
}

@media (max-width: 600px) {
  .newsletter-form .input-group {
    flex-direction: column; /* Buton sub input pe mobil */
  }
  
  .newsletter-form input[type="text"] {
    width: 100%;
    padding: 14px 20px; /* Padding uniform */
  }
  
  .newsletter-form button {
    width: 100%; /* Egal cu inputul ca lungime */
    padding: 14px 20px; /* Padding uniform */
    margin-top: 0.5rem; /* Spațiu între input și buton */
  }
}
</style>