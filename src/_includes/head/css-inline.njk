{%- if eleventy.env.runMode === "serve" %}
  <!-- External CSS for local dev (refresh without page reload) -->
  <link rel="stylesheet" href="{% getBundleFileUrl "css", "global" %}">
  <link rel="stylesheet" href="{% getBundleFileUrl "css", "local" %}">
{%- else %}
  <!-- Inlined CSS (fastest site performance in production) -->
  <style>{% getBundle "css", "global" %}</style>
  <style>{% getBundle "css", "local" %}</style>
{%- endif %}

{% css "global" %}{% include "css/global.css" %}{% endcss %}

<style>
/* ===========================
   Newsletter form (MailerLite)
   =========================== */

* {
  box-sizing: border-box;
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 600px;
  margin: 2rem auto;
  padding: 0 1rem;
}

.newsletter-form .input-group {
  display: flex;
  gap: 0.75rem;
  width: 100%;
}

/* INPUT (email + fallback text) */
.newsletter-form input[type="email"],
.newsletter-form input[type="text"] {
  flex: 4;
  padding: 14px 40px;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  font-size: 20px;
  line-height: 1.5;
  outline: none;
  background-color: #ffffff;
  color: #333333;
  font-family: system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-weight: 400;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
  min-width: 0;
  margin: 0;
}

.newsletter-form input::placeholder {
  color: #94a3b8;
}

.newsletter-form input[type="email"]:focus,
.newsletter-form input[type="text"]:focus {
  border-color: #4f46e5;
  box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.15);
}

/* BUTTON */
.newsletter-form button {
  background-color: #4467dd;
  color: #ffffff;
  font-weight: 400;
  padding: 14px 20px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 20px;
  font-family: system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  flex: 1;
  max-width: 150px;
  margin: 0;
  transition: background-color 0.3s ease, transform 0.2s ease;
}

.newsletter-form button:hover {
  background-color: #3754b5;
  transform: translateY(-1px);
}

.newsletter-form button:active {
  transform: translateY(0);
}

/* MESSAGE */
.newsletter-form .form-message {
  margin-top: 0.5rem;
  font-size: 14px;
  color: #64748b;
  text-align: center;
  min-height: 20px;
}

/* MOBILE */
@media (max-width: 600px) {
  .newsletter-form .input-group {
    flex-direction: column;
  }

  .newsletter-form input[type="email"],
  .newsletter-form input[type="text"] {
    width: 100% !important;
    padding: 14px 40px;
    border-radius: 8px;
  }

  .newsletter-form button {
    width: 100% !important;
    max-width: none;
    margin-top: 0.5rem;
  }
}
</style>
