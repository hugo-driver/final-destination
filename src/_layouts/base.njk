{% set assetHash = helpers.random() %}

<!doctype html>
<html lang="{{ meta.lang }}">
  <!-- The order of elements in the head follows recommendations by Harry Roberts. learn more here: https://www.youtube.com/watch?v=MHyAOZ45vnU -->

  <head>
    <!-- 1 charset/viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- 2 title -->
    <title>
      {%- if title -%}
        {{- title -}}
      {%- else -%}
        {{- meta.siteName -}}
      {%- endif -%}
    </title>

    <base href="{{ page.url }}" />

    <!-- 3 synchronous js  -->
    {% include "head/js-inline.njk" %}

    <!-- 4 schema settings -->
    {% include "head/schema.njk" %}

    <!-- 5 CSS  -->
    <link rel="stylesheet" href="/assets/css/global.css?{{ assetHash }}" />
    {% include "head/css-inline.njk" %}
<style>
/* Container general al formularului */
.newsletter-form {
  max-width: 700px; /* Mai lung pe desktop */
  margin: 0 auto;
  padding: 0 1rem; /* Margini laterale pentru spațiu */
}

/* Input group pe desktop: input + buton în linie */
.input-group {
  display: flex;
  gap: 0.5rem;
  justify-content: center; /* Centrează conținutul */
}

/* Stiluri pentru input */
.input-group input[type="text"] {
  flex: 1; /* Ocupă spațiul disponibil */
  padding: 0.75rem;
  font-size: 1rem;
  border: 1px solid #ccc;
  border-radius: 0.5rem;
  max-width: 600px; /* Limitează lățimea maximă pe desktop */
}

/* Stiluri pentru buton */
.input-group button {
  padding: 0.75rem 1.5rem;
  font-size: 1rem;
  border: none;
  border-radius: 0.5rem;
  background-color: #0066cc;
  color: white;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.input-group button:hover {
  background-color: #004a99;
}

/* Responsivitate pentru mobil */
@media (max-width: 600px) {
  .newsletter-form {
    max-width: 100%; /* Folosește tot spațiul disponibil */
  }

  .input-group {
    flex-direction: column;
    align-items: center; /* Centrează input și buton */
  }

  .input-group input[type="text"] {
    width: 100%;
    max-width: 300px; /* Input mai mic pe mobil */
  }

  .input-group button {
    width: 200px; /* Buton mai mic decât input-ul */
    margin-top: 0.75rem;
  }
}

/* Adaugă aici stilurile pentru butoanele de temă, dacă nu le ai deja în global.css */
.theme-buttons {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
  margin: 1rem 0;
}

.dark-btn, .light-btn {
  padding: 0.5rem 1rem;
  font-size: 1rem;
  border: none;
  border-radius: 0.5rem;
  background-color: #f0f0f0;
  cursor: pointer;
  transition: background-color 0.2s ease;
  width: auto;
  min-width: 80px;
}

.dark-btn:hover, .light-btn:hover {
  background-color: #d0d0d0;
}

@media (max-width: 600px) {
  .theme-buttons {
    flex-direction: row;
    justify-content: center;
    gap: 0.75rem;
  }

  .dark-btn, .light-btn {
    min-width: 70px;
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
  }
}
</style>


    <!-- 6 preloads  -->
    {% include "head/preloads.njk" %}

    <!-- 7 defer  -->
    {% include "head/js-defer.njk" %}

    <!-- 8 meta tags, icons, open graph etc.  -->
    {% include "head/meta-info.njk" %}
    <script src="https://cdn.usefathom.com/script.js" data-site="JGKLKOWZ" defer></script>
  </head>

  <body class="{{ layout }}">
    {% set indicateActiveHome %}
      {% if page.url == "/" %}
        aria-current=page
      {% endif %}
    {% endset %}
    {% include "partials/header.njk" %}

    <main id="main" class="flow">{{ content | safe }}</main>

    {% include "partials/footer.njk" %}
    {%- if meta.easteregg -%}
      <script type="module" src="/assets/scripts/components/custom-easteregg.js"></script>
      <custom-easteregg></custom-easteregg>
    {%- endif -%}
  </body>
</html>